{
  "name": "fontify",
  "displayName": "Fontify",
  "description": "Automatically detect, install, and manage fonts in VS Code",
  "version": "0.1.0",
  "publisher": "AntipasBen23",
  "author": {
    "name": "Antipas Ben",
    "email": "benantipas@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AntipasBen23/fontify.git"
  },
  "bugs": {
    "url": "https://github.com/AntipasBen23/fontify/issues"
  },
  "homepage": "https://github.com/AntipasBen23/fontify#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Extension Packs"
  ],
  "keywords": [
    "fonts",
    "typography",
    "development",
    "productivity",
    "automation"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fontify.detectFonts",
        "title": "Detect Fonts",
        "category": "Fontify"
      },
      {
        "command": "fontify.makeProductionReady",
        "title": "Make Production-Ready",
        "category": "Fontify"
      },
      {
        "command": "fontify.refreshCache",
        "title": "Refresh Font Cache",
        "category": "Fontify"
      }
    ],
    "configuration": {
      "title": "Fontify",
      "properties": {
        "fontify.autoDetect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect fonts on startup"
        },
        "fontify.sources": {
          "type": "array",
          "default": [
            "google-fonts",
            "fontsource"
          ],
          "description": "Font sources to search",
          "items": {
            "type": "string",
            "enum": [
              "google-fonts",
              "fontsource"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "webpack --mode development",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "package": "vsce package",
    "pretest": "npm run build && npm run lint",
    "watch": "webpack --mode development --watch"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.5",
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.32.0",
    "audit-ci": "^6.6.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "ovsx": "^0.8.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "glob": "^10.3.4",
    "jsonc-parser": "^3.2.0",
    "node-fetch": "^3.3.2",
    "systeminformation": "^5.21.8"
  }
}
