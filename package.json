{
  "name": "fontify",
  "displayName": "Fontify",
  "description": "Automatically detect, install, and manage fonts in VS Code",
  "version": "0.0.1",
  "publisher": "AntipasBen23",
  "author": {
    "name": "Antipas Ben",
    "email": "benantipas@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AntipasBen23/fontify.git"
  },
  "bugs": {
    "url": "https://github.com/AntipasBen23/fontify/issues"
  },
  "homepage": "https://github.com/AntipasBen23/fontify#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Extension Packs"
  ],
  "keywords": [
    "fonts",
    "typography",
    "development",
    "productivity",
    "automation"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fontify.detectFonts",
        "title": "Detect Missing Fonts",
        "category": "Fontify"
      },
      {
        "command": "fontify.installFont",
        "title": "Install Font",
        "category": "Fontify"
      },
      {
        "command": "fontify.makeProductionReady",
        "title": "Make Production-Ready",
        "category": "Fontify"
      },
      {
        "command": "fontify.refreshCache",
        "title": "Refresh Font Cache",
        "category": "Fontify"
      }
    ],
    "configuration": {
      "title": "Fontify",
      "properties": {
        "fontify.autoDetect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect missing fonts on startup"
        },
        "fontify.autoInstall": {
          "type": "boolean",
          "default": false,
          "description": "Automatically install missing fonts without prompting"
        },
        "fontify.sources": {
          "type": "array",
          "default": [
            "google-fonts",
            "fontsource"
          ],
          "description": "Font sources to search",
          "items": {
            "type": "string",
            "enum": [
              "google-fonts",
              "fontsource",
              "local"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "18.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "fs-extra": "^11.3.1",
    "glob": "^10.3.4",
    "jsonc-parser": "^3.2.0",
    "node-fetch": "^3.3.2",
    "systeminformation": "^5.21.8"
  }
}
